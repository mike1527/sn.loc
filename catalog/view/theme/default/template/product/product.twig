                    <div class="product__wrapper">

                        <div class="product__inner">

                    {% if thumb or images %}
                      <ul class="thumbnails">
                        {% if thumb %}
                          <li class="product__thumbnail-item">
                            <a class="product__thumbnail-link" href="{{ popup }}" title="{{ heading_title }}">
                              <img class="product__img-main" src="{{ thumb }}" title="{{ heading_title }}" alt="{{ heading_title }}" />
                            </a>
                          </li>
                        {% endif %}
                        {% if images %}
                            <ul class="product__additional-box">
                          {% for image in images %}

                                  <li class="product__additional-item">
                                      <a class="product__thumbnail-link" href="{{ image.popup }}" title="{{ heading_title }}">
                                          <img class="product__img-additional" src="{{ image.thumb }}" title="{{ heading_title }}" alt="{{ heading_title }}" />
                                      </a>
                                  </li>

                          {% endfor %}
                            </ul>
                        {% endif %}
                      </ul>
                    {% endif %}

                    <div class="product__reviews">

                      <h2 class="product__title">{{ text_comment_title }}</h2>

                      {% if review_status %}
                        <form class="form-horizontal" id="form-review">

                          {% if review_guest %}
