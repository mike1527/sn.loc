<script>
    const btnMenu = document.getElementById('catalog');
    const menu = document.getElementById('catalogBox');
    const toggleMenu = function() {
        menu.classList.toggle('cat-open');
    }

    btnMenu.addEventListener('click', function(e) {
        e.stopPropagation();
        toggleMenu();
    });

    document.addEventListener('click', function(e) {
        const target = e.target;
        const its_menu = target == menu || menu.contains(target);
        const its_btnMenu = target == btnMenu;
        const menu_is_active = menu.classList.contains('cat-open');

        if (!its_menu && !its_btnMenu && menu_is_active) {
            toggleMenu();
        }
    });
</script>

<script>

    const btnInfoMenu = document.getElementById('headerBtn');
    const menuInfo = document.getElementById('headerInfo');
    const toggleMenuInfo = function() {
        menuInfo.classList.toggle('info-open');
    }

    btnInfoMenu.addEventListener('click', function(e) {
        e.stopPropagation();
        toggleMenuInfo();
    });

    document.addEventListener('click', function(e) {
        const targetInfo = e.target;
        const its_menuInfo = targetInfo == menuInfo || menuInfo.contains(targetInfo);
        const its_btnMenuInfo = targetInfo == btnInfoMenu;
        const menu_is_activeInfo = menuInfo.classList.contains('info-open');

        if (!its_menuInfo && !its_btnMenuInfo && menu_is_activeInfo) {
            toggleMenuInfo();
        }
    });

</script>