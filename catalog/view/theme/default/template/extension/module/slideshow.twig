<div class="swiper-viewport">
  <div id="slideshow{{ module }}" class="swiper-container">
    <div class="swiper-wrapper">
      {% for banner in banners %}
        <div class="swiper-slide text-center">
          {% if banner.link %}
            <img src="{{ banner.image }}" alt="{{ banner.title }}" class="img-responsive slideshow__home-img"/>
            <a class="slider__link-btn" href="{{ banner.link }}">{{ slider_link_btn }}</a>
          {% else %}
            <img src="{{ banner.image }}" alt="{{ banner.title }}" class="img-responsive slideshow__home-img"/>
          {% endif %}
        </div>
      {% endfor %}
    </div>
    <div class="swiper-button-next">
{#      <svg xmlns="http://www.w3.org/2000/svg" class="slider-next__icon">#}
{#        <use xlink:href="/img/icon/sprite.svg#nextSlider"></use>#}
{#      </svg>#}
    </div>
    <div class="swiper-button-prev">
{#      <svg xmlns="http://www.w3.org/2000/svg" class="slider-prev__icon">#}
{#        <use xlink:href="/img/icon/sprite.svg#prevSlider"></use>#}
{#      </svg>#}
    </div>
    <div class="swiper-pagination slideshow{{ module }}"></div>
  </div>

  <div class="swiper-pager">
  </div>
</div>
<script type="text/javascript">
  $('#slideshow{{ module }}').swiper({
    mode: 'horizontal',
    slidesPerView: 1,
    pagination: '.slideshow{{ module }}',
    paginationClickable: true,
    nextButton: '.swiper-button-next',
    prevButton: '.swiper-button-prev',
    spaceBetween: 30,
    autoplay: 25000,
    autoplayDisableOnInteraction: true,
    loop: true
  });
</script>